<%- include("header") -%>

<div class="transfer-form">
<form action="/transfer" method="post">
    <select class="form-select" aria-label="Default select example" name="from" required>
        <option selected>Choose Account</option>
        <% clientss.forEach(function(oneClient){ %>
            <option value=<%= oneClient.name %>><%= oneClient.name %></option>
        <% }) %>
    </select>
<br>
    <select class="form-select" aria-label="Default select example" name="recipient" required>
        <option selected>Recipient Account</option>
        <% clientss.forEach(function(oneClient){ %>
            <option value=<%= oneClient.name %>><%= oneClient.name %></option>
        <% }) %>
    </select>
<br>
    <div class="mb-3">
        <input type="number" class="form-control" id="exampleInputPassword1" name="amount" placeholder="Enter Amount" required>
    </div>
    <button type="submit" class="btn btn-primary">Transfer</button>
  </form>
</div>
<%- include("footer") -%>